#include <bits/stdc++.h>
using namespace std;

const long long MOD = 1e9 + 7;

int main() {
    long long n;
    cin >> n;

    long long even_count = (n + 1) / 2;
    long long odd_count = n / 2;

    long long ans = ( (long long)pow(5, even_count) * (long long)pow(4, odd_count) ) ;
    cout << ans % MOD;
}
