#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    if (!(cin >> n)) return 0;
    vector<int> pos[4];
    for (int i = 1; i <= n; ++i) {
        int t;
        cin >> t;
        pos[t].push_back(i);
    }

    int w = min({ (int)pos[1].size(), (int)pos[2].size(), (int)pos[3].size() });
    cout << w << "\n";
    for (int i = 0; i < w; ++i) {
        cout << pos[1][i] << " " << pos[2][i] << " " << pos[3][i] << "\n";
    }

    return 0;
}
